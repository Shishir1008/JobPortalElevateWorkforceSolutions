<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jobseeker Dashboard</title>
  <style>
  *{
    scroll-behavior: smooth;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  
  body, html {
    height: 100%;
    background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
    color: #333;
    overflow-x: hidden;
  }
  
  .container {
    display: flex;
    min-height: 100vh;
    flex-wrap: wrap;
  }
  
  .sidebar {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);
    width: 250px;
    padding: 2rem 1rem;
    height: 100vh;
    color: #333;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
    border-right: 1px solid rgba(255, 255, 255, 0.3);
    position: fixed;
    left: 0;
    top: 0;
    transition: transform 0.3s ease;
  }
  
  .sidebar h2 {
    font-weight: bold;
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }
  
  .sidebar a {
    color: #666;
    display: block;
    padding: 0.75rem 1rem;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    text-decoration: none;
    text-align: center;
    width: 100%;
    border-radius: 5px;
    transition: color 0.3s ease, transform 0.3s ease;
  }
  
  .sidebar a:hover {
    color: #ff6f61;
    transform: translateX(5px);
  }
  
  .content {
    margin-left: 250px;
    padding: 2rem;
    flex-grow: 1;
  }
  
  h1, h2 {
    color: #333;
  }
  
  form {
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(15px);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  input, textarea, select {
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
    color: #333;
    background: #fff;
    margin-bottom: 1rem;
    width: 100%;
  }
  
  input::placeholder, textarea::placeholder {
    color: #aaa;
  }
  
  input:focus, textarea:focus, select:focus {
    border-color: #ff6f61;
    outline: none;
  }
  
  button {
    background: linear-gradient(135deg, #ff6f61, #ff9a9e);
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: transform 0.3s ease, background 0.3s ease;
  }
  
  button:hover {
    background: linear-gradient(135deg, #ff9a9e, #ff6f61);
    transform: scale(1.05);
  }
  
  .job-card {
    background: rgba(255, 255, 255, 0.8);
    padding: 1.5rem;
    margin: 1rem 0;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .section {
    background: rgba(255, 255, 255, 0.8);
    padding: 2rem;
    border-radius: 12px;
    margin-bottom: 2rem;
  }
  
  .Pending, .pending, .Approved, .Rejected {
    font-weight: bold;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    text-align: center;
  }
  
  .Pending, .pending { background-color: #f1c40f; color: black; }
  .Approved { background-color: #2ecc71; color: white; }
  .Rejected { background-color: #e74c3c; color: white; }
  
  table {
    width: 100%;
    border-collapse: collapse;
  }
  
  th, td {
    padding: 10px;
    border-bottom: 1px solid #ddd;
  }
  
  th { background-color: #ff6f61; color: white; }
  
  @media (max-width: 1024px) {
    .sidebar {
      width: 200px;
    }
  
    .content {
      margin-left: 200px;
    }
  }
  
  @media (max-width: 768px) {
    .sidebar {
      position: fixed;
      transform: translateX(-100%);
      z-index: 10;
      height: 100vh;
      width: 70%;
      padding: 1.5rem 1rem;
    }
  
    .sidebar.open {
      transform: translateX(0);
    }
  
    .content {
      margin-left: 0;
      padding: 1rem;
    }
  
    .job-card, .section, form {
      padding: 1rem;
    }
  
    button {
      width: 100%;
    }
  }
  
  @media (max-width: 480px) {
    .sidebar {
      width: 100%;
    }
  
    .sidebar a {
      padding: 0.5rem;
    }
  
    h1, h2 {
      font-size: 1.5rem;
    }
  
    input, textarea, select, button {
      font-size: 0.9rem;
    }
  }
</style>  
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h2>Dashboard</h2>
      <a href="#job-listings">Job Listings</a>
      <a href="#applications">My Applications</a>
      <a href="/logout" class="logout">Logout</a>
    </div>
    <button onclick="toggleSidebar()">â˜° Menu</button>

    <!-- Main Content -->
    <div class="content">
      <!-- Header -->
      <h1>Welcome to Your Dashboard</h1>

      <!-- Job Listings Section -->
      <div id="job-listings" class="section">
        <h2>Job Listings</h2>
        <div class="job-list">
          <% jobs.forEach(job => { %>
            <div class="job-card">
              <h3><%= job.jobTitle %></h3>
              <p><strong>Company:</strong> <%= job.Company.companyName %></p>
              <p><strong>Location:</strong> <%= job.location || 'N/A' %></p>
              <p><strong>Type:</strong> <%= job.jobType || 'N/A' %></p>
              <p><strong>Salary:</strong> Rs<%= job.salary || 'N/A' %></p>
              <p><strong>Description:</strong> <%= job.jobDescription || 'N/A' %></p>
              <p><strong>Posting Date:</strong> <%= job.postingDate ? job.postingDate.toDateString() : 'N/A' %></p>
              <p><strong>Expiry Date:</strong> <%= job.expiryDate ? job.expiryDate.toDateString() : 'N/A' %></p>
              <form action="/apply/<%= job.id %>" method="POST" onsubmit="return confirmApply()">
                <br>
                <button type="submit">Apply</button>
              </form>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Applications Section -->
      <div id="applications" class="section">
        <h2>Your Applications</h2>
        <div class="job-list">
          <% jobs.forEach(job => { %>
            <% if (appliedJobs[job.id]) { %> <!-- Only show jobs the user has applied for -->
              <div class="job-card">
                <p><strong>Job-Position:</strong> <%= job.jobTitle %></p>
                <p><strong>Company:</strong> <%= job.Company.companyName %></p>
                <p><strong>Location:</strong> <%= job.location || 'N/A' %></p>
                <p><strong>Type:</strong> <%= job.jobType || 'N/A' %></p>
                <p><strong>Salary:</strong> Rs<%= job.salary || 'N/A' %></p>
                <!-- Highlight application status -->
                <p>
                  <strong>Application Status:</strong>
                  <div class="<%= appliedJobs[job.id] %>">
                    <%= appliedJobs[job.id] %>
                  </div>
                </p>
              </div>
            <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
  <script>
    function toggleSidebar() {
    document.querySelector('.sidebar').classList.toggle('open');
  }

    // JavaScript function to show confirmation dialog
    function confirmApply() {
      return confirm("Are you sure you want to apply for this job?");
    }
  </script>
</body>
</html>